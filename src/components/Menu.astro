<!--putter active klassen på det aktive href link i navbar-->
<script>

   /**vælger det HTML-element, der har klassen "navbar"  */
  const nav = document.querySelector(".navbar");

/***Finder alle a elementerne i nav */
  const navLinks = nav.querySelectorAll("a");

  /**window.location.href returnerer den aktuelle URL for den side, som brugeren er på. 
   * Dette gemmes i variablen currentURL. */
  const currentURL = window.location.href;

  /** Dette bruger en forEach til at iterere over hvert link i navLinks-listen. */
  navLinks.forEach((link) => {

    /**Her tjekker koden, om linkets href-egenskab matcher den nuværende side's URL (currentURL). 
     * Hvis de matcher, går koden videre. */
    if (link.href === currentURL) {

    /**hvis linket er det aktuelle link), tilføjes klassen "active" til dette link */
      link.classList.add("active");
    }
  });
</script>
